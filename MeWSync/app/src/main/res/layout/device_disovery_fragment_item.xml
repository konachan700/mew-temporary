<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal" android:gravity="center" android:padding="8dp"
              android:background="@drawable/list_item_bg">

    <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp" app:srcCompat="@android:drawable/stat_sys_data_bluetooth"
            android:id="@+id/imageView" android:layout_weight="0" android:padding="8dp"/>
    <LinearLayout
            android:orientation="vertical" android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:text="MeW HPM 1"
                android:id="@+id/hpmname"
                android:textStyle="bold" android:layout_marginBottom="4dp" android:layout_marginLeft="8dp"
                android:layout_marginTop="4dp"/>
        <TextView
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="00:00:00:00:00:00"
                android:layout_marginLeft="10dp" android:layout_marginRight="4dp"/>
    </LinearLayout>
</LinearLayout>
