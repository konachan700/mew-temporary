<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:padding="12dp">

    <TextView
            android:text="Enter PIN-code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView3" android:layout_marginTop="8dp"
            android:layout_marginLeft="12dp" android:layout_marginRight="12dp" android:textSize="18sp"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberPassword"
            android:ems="10"
            android:id="@+id/pincodeBox1"
            android:textStyle="bold" android:textSize="36sp"
            android:gravity="center" android:editable="false" android:layout_margin="8dp"
            android:textIsSelectable="false" android:singleLine="true"/>
    <TextView
            android:text="Incorrect PIN-code. Please, try again."
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/incorrectPinWarning" android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp" android:textStyle="bold" android:textColor="@color/colorAccent"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
                android:text="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/button11" android:layout_weight="1"
                android:layout_margin="2dp" android:textStyle="bold" android:textSize="24sp"
                android:background="@color/colorBrandDark1" android:textColor="@color/colorWhite"
                android:padding="8dp"/>
        <Button
                android:text="2"
                android:layout_width="wrap_content"
                android:layout_margin="2dp"
                android:layout_height="wrap_content" android:id="@+id/button12" android:layout_weight="1"
                android:textStyle="bold" android:textSize="24sp" android:background="@color/colorBrandDark1"
                android:textColor="@color/colorWhite" android:padding="8dp"/>
        <Button
                android:text="3"
                android:layout_width="wrap_content"
                android:layout_margin="2dp"
                android:layout_height="wrap_content" android:id="@+id/button13" android:layout_weight="1"
                android:textStyle="bold" android:textSize="24sp" android:background="@color/colorBrandDark1"
                android:textColor="@color/colorWhite" android:padding="8dp"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
                android:text="4"
                android:layout_margin="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button21"
                android:layout_weight="1" android:textStyle="bold" android:textSize="24sp"
                android:background="@color/colorBrandDark1" android:textColor="@color/colorWhite"
                android:padding="8dp"/>
        <Button
                android:text="5"
                android:layout_margin="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/button22" android:layout_weight="1"
                android:textStyle="bold" android:textSize="24sp" android:background="@color/colorBrandDark1"
                android:textColor="@color/colorWhite" android:padding="8dp"/>
        <Button
                android:text="6"
                android:layout_margin="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/button23" android:layout_weight="1"
                android:textStyle="bold" android:textSize="24sp" android:background="@color/colorBrandDark1"
                android:textColor="@color/colorWhite" android:padding="8dp"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
                android:text="7"
                android:layout_margin="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/button31" android:layout_weight="1"
                android:textStyle="bold" android:textSize="24sp" android:background="@color/colorBrandDark1"
                android:textColor="@color/colorWhite" android:padding="8dp"/>
        <Button
                android:text="8"
                android:layout_margin="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/button32" android:layout_weight="1"
                android:textStyle="bold" android:textSize="24sp" android:background="@color/colorBrandDark1"
                android:textColor="@color/colorWhite" android:padding="8dp"/>
        <Button
                android:text="9"
                android:layout_margin="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/button33" android:layout_weight="1"
                android:textStyle="bold" android:textSize="24sp" android:background="@color/colorBrandDark1"
                android:textColor="@color/colorWhite" android:padding="8dp"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
                android:text="DEL"
                android:layout_margin="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/button41" android:layout_weight="1"
                android:textStyle="bold" android:textSize="24sp" android:background="@color/colorBrandDark1"
                android:textColor="@color/colorWhite" android:padding="8dp"/>
        <Button
                android:text="0"
                android:layout_margin="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/button42" android:layout_weight="1"
                android:textStyle="bold" android:textSize="24sp" android:background="@color/colorBrandDark1"
                android:textColor="@color/colorWhite" android:padding="8dp"/>
        <Button
                android:text="OK"
                android:layout_margin="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/button43" android:layout_weight="1"
                android:textStyle="bold" android:textSize="24sp" android:background="@color/colorBrandDark1"
                android:textColor="@color/colorWhite" android:padding="8dp"/>
    </LinearLayout>
</LinearLayout>